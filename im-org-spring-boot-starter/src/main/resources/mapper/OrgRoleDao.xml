<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.berby.im.dao.OrgRoleDao">

    <resultMap type="xyz.berby.im.entity.OrgRole" id="OrgRoleMap">
        <result property="orgRoleId" column="org_role_id" jdbcType="VARCHAR"/>
        <result property="orgId" column="org_id" jdbcType="VARCHAR"/>
        <result property="orgRoleNumbers" column="org_role_numbers" jdbcType="NUMERIC"/>
        <result property="roleId" column="role_id" jdbcType="VARCHAR"/>
        <result property="roleName" column="role_name" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="OrgRoleMap">
        select
          org_role_id, org_id, org_role_numbers, role_id, role_name
        from imserver.org_role
        where org_role_id = #{orgRoleId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="OrgRoleMap">
        select
          org_role_id, org_id, org_role_numbers, role_id, role_name
        from imserver.org_role
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="OrgRoleMap">
        select
          org_role_id, org_id, org_role_numbers, role_id, role_name
        from imserver.org_role
        <where>
            <if test="orgRoleId != null and orgRoleId != ''">
                and org_role_id = #{orgRoleId}
            </if>
            <if test="orgId != null and orgId != ''">
                and org_id = #{orgId}
            </if>
            <if test="orgRoleNumbers != null">
                and org_role_numbers = #{orgRoleNumbers}
            </if>
            <if test="roleId != null and roleId != ''">
                and role_id = #{roleId}
            </if>
            <if test="roleName != null and roleName != ''">
                and role_name = #{roleName}
            </if>
        </where>
    </select>
    
    <!--通过分页对象作为筛选条件查询-->
    <select id="queryByPager" resultMap="OrgRoleMap">
        select
          org_role_id, org_id, org_role_numbers, role_id, role_name
        from imserver.org_role
        <where>
            <if test = "param != null">
                <if test="param.orgRoleId != null and param.orgRoleId != ''">
                    and org_role_id like concat(#{param.orgRoleId}, '%')
                </if>
                <if test="param.orgId != null and param.orgId != ''">
                    and org_id like concat(#{param.orgId}, '%')
                </if>
                <if test="param.orgRoleNumbers != null">
                    and org_role_numbers = #{param.orgRoleNumbers}
                </if>
                <if test="param.roleId != null and param.roleId != ''">
                    and role_id like concat(#{param.roleId}, '%')
                </if>
                <if test="param.roleName != null and param.roleName != ''">
                    and role_name like concat(#{param.roleName}, '%')
                </if>
            </if>
        </where>
        limit #{offset}, #{limit}
    </select>
    
    <!--通过分页对象作为筛选条件查询记录条数-->
    <select id="countByPager" resultType="int">
        select
          count(*)

        from imserver.org_role
        <where>
            <if test = "param != null">
                <if test="param.orgRoleId != null and param.orgRoleId != ''">
                    and org_role_id like concat(#{param.orgRoleId}, '%')
                </if>
                <if test="param.orgId != null and param.orgId != ''">
                    and org_id like concat(#{param.orgId}, '%')
                </if>
                <if test="param.orgRoleNumbers != null">
                    and org_role_numbers = #{param.orgRoleNumbers}
                </if>
                <if test="param.roleId != null and param.roleId != ''">
                    and role_id like concat(#{param.roleId}, '%')
                </if>
                <if test="param.roleName != null and param.roleName != ''">
                    and role_name like concat(#{param.roleName}, '%')
                </if>
            </if>
        </where>
    </select>

    

    <!--新增所有列-->
    <insert id="insert" keyProperty="orgRoleId" useGeneratedKeys="true">
        insert into imserver.org_role(org_id, org_role_numbers, role_id, role_name)
        values (#{orgId}, #{orgRoleNumbers}, #{roleId}, #{roleName})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update imserver.org_role
        <set>
            <if test="orgId != null and orgId != ''">
                org_id = #{orgId},
            </if>
            <if test="orgRoleNumbers != null">
                org_role_numbers = #{orgRoleNumbers},
            </if>
            <if test="roleId != null and roleId != ''">
                role_id = #{roleId},
            </if>
            <if test="roleName != null and roleName != ''">
                role_name = #{roleName},
            </if>
        </set>
        where org_role_id = #{orgRoleId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from imserver.org_role where org_role_id = #{orgRoleId}
    </delete>

    <!--通过主键数组删除数据-->
    <delete id="deleteByIds">
        delete from imserver.org_role
        where org_role_id in
        <foreach collection="array" item="item" open="(" close=")" separator="," index="index">
            #{item}
        </foreach>
    </delete>

</mapper>