<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.berby.im.dao.ChatGroupDao">

    <resultMap type="xyz.berby.im.entity.ChatGroup" id="ChatGroupMap">
        <result property="chatGroupId" column="chat_group_id" jdbcType="VARCHAR"/>
        <result property="orgId" column="org_id" jdbcType="VARCHAR"/>
        <result property="userId" column="user_id" jdbcType="VARCHAR"/>
        <result property="chatGroupName" column="chat_group_name" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ChatGroupMap">
        select
          chat_group_id, org_id, user_id, chat_group_name
        from imserver.chat_group
        where chat_group_id = #{chatGroupId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ChatGroupMap">
        select
          chat_group_id, org_id, user_id, chat_group_name
        from imserver.chat_group
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ChatGroupMap">
        select
          chat_group_id, org_id, user_id, chat_group_name
        from imserver.chat_group
        <where>
            <if test="chatGroupId != null and chatGroupId != ''">
                and chat_group_id = #{chatGroupId}
            </if>
            <if test="orgId != null and orgId != ''">
                and org_id = #{orgId}
            </if>
            <if test="userId != null and userId != ''">
                and user_id = #{userId}
            </if>
            <if test="chatGroupName != null and chatGroupName != ''">
                and chat_group_name = #{chatGroupName}
            </if>
        </where>
    </select>
    
    <!--通过分页对象作为筛选条件查询-->
    <select id="queryByPager" resultMap="ChatGroupMap">
        select
          chat_group_id, org_id, user_id, chat_group_name
        from imserver.chat_group
        <where>
            <if test = "param != null">
                <if test="param.chatGroupId != null and param.chatGroupId != ''">
                    and chat_group_id like concat(#{param.chatGroupId}, '%')
                </if>
                <if test="param.orgId != null and param.orgId != ''">
                    and org_id like concat(#{param.orgId}, '%')
                </if>
                <if test="param.userId != null and param.userId != ''">
                    and user_id like concat(#{param.userId}, '%')
                </if>
                <if test="param.chatGroupName != null and param.chatGroupName != ''">
                    and chat_group_name like concat(#{param.chatGroupName}, '%')
                </if>
            </if>
        </where>
        limit #{offset}, #{limit}
    </select>
    
    <!--通过分页对象作为筛选条件查询记录条数-->
    <select id="countByPager" resultType="int">
        select
          count(*)

        from imserver.chat_group
        <where>
            <if test = "param != null">
                <if test="param.chatGroupId != null and param.chatGroupId != ''">
                    and chat_group_id like concat(#{param.chatGroupId}, '%')
                </if>
                <if test="param.orgId != null and param.orgId != ''">
                    and org_id like concat(#{param.orgId}, '%')
                </if>
                <if test="param.userId != null and param.userId != ''">
                    and user_id like concat(#{param.userId}, '%')
                </if>
                <if test="param.chatGroupName != null and param.chatGroupName != ''">
                    and chat_group_name like concat(#{param.chatGroupName}, '%')
                </if>
            </if>
        </where>
    </select>

    

    <!--新增所有列-->
    <insert id="insert" keyProperty="chatGroupId" useGeneratedKeys="true">
        insert into imserver.chat_group(org_id, user_id, chat_group_name)
        values (#{orgId}, #{userId}, #{chatGroupName})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update imserver.chat_group
        <set>
            <if test="orgId != null and orgId != ''">
                org_id = #{orgId},
            </if>
            <if test="userId != null and userId != ''">
                user_id = #{userId},
            </if>
            <if test="chatGroupName != null and chatGroupName != ''">
                chat_group_name = #{chatGroupName},
            </if>
        </set>
        where chat_group_id = #{chatGroupId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from imserver.chat_group where chat_group_id = #{chatGroupId}
    </delete>

    <!--通过主键数组删除数据-->
    <delete id="deleteByIds">
        delete from imserver.chat_group
        where chat_group_id in
        <foreach collection="array" item="item" open="(" close=")" separator="," index="index">
            #{item}
        </foreach>
    </delete>

</mapper>